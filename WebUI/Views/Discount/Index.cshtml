@model List<WebUI.Dtos.DiscountDtos.ResaultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim işlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İndirim listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İndirim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                            <br /> Tema bütünlüğü için sadece 1 tane oluşturmayı unutmayın.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.DiscountID</td>
                                        <td>@item.Description</td>
                                        <td>@item.Image</td>
                                        <td>@item.Amount</td>
                                        <td><a href="/Discount/DeleteDiscount/@item.DiscountID" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Discount/UpdateDiscount/@item.DiscountID" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                        <a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Yeni kategori girişi</a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

