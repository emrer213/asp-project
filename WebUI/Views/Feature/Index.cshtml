@model List<WebUI.Dtos.FeatureDtos.ResaultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana sayfa Alt iletişim işlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
                            <br /> Tema bütünlüğü için sadece 1 tane oluşturmayı unutmayın.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Konum</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FeatureId</td>
                                        <td>@item.FeatureTitle1</td>
                                        <td>@item.FeatureDecsription1</td>
                                        <td>@item.FeatureTitle2</td>
                                        <td>@item.FeatureDecsription2</td>
                                        <td>@item.FeatureTitle3</td>
                                        <td>@item.FeatureDecsription3</td>
                                        <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Feature/CreateFeature" class="btn btn-outline-primary">Yeni kategori girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
